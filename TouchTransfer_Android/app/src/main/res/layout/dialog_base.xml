<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingTop="24dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="24dp"/>
    <TextView
        android:id="@+id/dialog_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title_tv"
        android:textSize="16sp"
        android:layout_marginBottom="36dp"
        android:layout_marginRight="24dp"/>
    <LinearLayout
        android:id="@+id/dialog_click_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/dialog_content_tv"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/dialog_confirm_tv"
            android:layout_width="wrap_content"
            android:minWidth="93dp"
            android:layout_height="36dp"
            android:textColor="@color/color_blue"
            android:layout_marginRight="11dp"
            android:text="确定"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/dialog_cancel_tv"
            android:layout_width="wrap_content"
            android:minWidth="93dp"
            android:layout_height="36dp"
            android:text="取消"
            android:layout_marginRight="11dp"
            android:textColor="@color/color_blue"
            android:gravity="center"/>

    </LinearLayout>




</RelativeLayout>