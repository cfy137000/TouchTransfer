<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.chenfy.touchtransfer_android.view.SquareImageView
        android:id="@+id/item_album_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:src="@drawable/gradient"
        android:scaleType="fitXY"/>
    <ImageView
        android:id="@+id/item_video_type_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_movie"
        android:layout_gravity="right|top"
        android:layout_margin="5dp"/>
    <View
        android:id="@+id/item_progress_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F1A1A1A"
        />

    <ProgressBar
        android:id="@+id/item_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/color_blue"
        style="@android:style/Widget.Material.ProgressBar.Large"
        />


</FrameLayout>